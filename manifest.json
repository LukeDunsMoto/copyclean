{
  "manifest_version": 3,
  "name": "copyclean",
  "version": "1.0.0",
  "description": "Copy selection as plain text. Auto-clean on Ctrl/Cmd+C (toggle), with tiny toasts and robust fallbacks.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "contextMenus",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "copyclean",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "exclude_matches": [
        "*://chrome.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ]
}
